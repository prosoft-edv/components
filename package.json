{
  "name": "prosoft-components-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "release:step1": "ng lint components && ng test components --watch false",
    "release:step2": "lerna version prerelease",
    "release:step3": "ng build components",
    "release:step4": "cd dist/components && npm publish"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~9.0.0-next.15",
    "@angular/cdk": "^8.2.3",
    "@angular/common": "~9.0.0-next.15",
    "@angular/compiler": "~9.0.0-next.15",
    "@angular/core": "~9.0.0-next.15",
    "@angular/forms": "~9.0.0-next.15",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~9.0.0-next.15",
    "@angular/platform-browser-dynamic": "~9.0.0-next.15",
    "@angular/router": "~9.0.0-next.15",
    "ngx-mat-select-search": "^1.7.6",
    "nouislider": "^14.0.2",
    "rxjs": "~6.5.3",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.0-next.19",
    "@angular-devkit/build-ng-packagr": "~0.900.0-next.19",
    "@angular/cli": "~9.0.0-next.19",
    "@angular/compiler-cli": "~9.0.0-next.15",
    "@angular/language-service": "~9.0.0-next.15",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jasmine": "^3.3.14",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@types/nouislider": "9.0.5",
    "codelyzer": "^5.1.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.6",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "ng-packagr": "^9.0.0-rc.0",
    "prettier": "^1.18.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "tslint-no-focused-test": "^0.5.0",
    "typescript": "~3.6.4"
  },
  "lint-staged": {
    "ignore": [
      ".vscode/**",
      "coverage/**",
      "dist/**",
      "node_modules/**",
      "package-lock.json"
    ],
    "linters": {
      "*.{ts,json,scss,html}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
